<h3>My dashboard</h3>
<div class="jumbotron jumbotron-list">
  <div>
    <h2><b>List Name: </b></br><%= link_to @dashboard.user_list.title, edit_list_path(@dashboard.user_list) %></h2>
    <h2Ã¥ class="lead"><b>Description:</b><%=  markdown @dashboard.user_list.description %></h2>
  </div>
  <div class="row input-bar">
    <div class="col-md-12">
      <%= render 'items/form', list: @dashboard.user_list %>
    </div>
  </div>
</div>

<% if @dashboard.list_items.any? %>
  <div class="panel panel-default">
    <div class="col-md-12 panel-heading">
      <div class="col-md-1 panel-title">
        <h5>Check</h5>
      </div>
      <div class="col-md-7 panel-title">
        <h5>ToDo List Task</h5>
      </div>
      <div class="col-md-2 panel-title">
        <h5>Time Left</h5>
      </div>
      <div class="col-md-2 panel-title">
        <h5>Actions</h5>
      </div>
    </div> 
    <div class="panel-body">
      <%= render @dashboard.list_items %>     
    </div>  
    <div class="panel-footer">
      <div class="pull-left">
        <p>
          <%= link_to '#', class: "btn btn-warning btn-md" do %> 
            <span>Clear List?</span>
          <% end %> 
        </p>
      </div>
      <div class="pull-right">
        <p>
          <%= link_to @list, method: :delete, data: { confirm: "Are you sure you want yo delete this list?" }, class: "btn btn-danger btn-md" do %> 
            <span>Delete List?</span>
          <% end %> 
        </p>
      </div>   
    </div>
  </div>
<% end %>
