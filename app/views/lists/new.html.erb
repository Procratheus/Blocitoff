<div class="row">
  <div class="col-md-2">
  </div>
  <div class="col-md-8">
  <%= form_for @list do |f| %>
    <% if @list.errors.any? %>
      <div class="alert alert-warning alert-dismissable">
        <button type="button" class="close" data-dismiss="alert" ><span>&times;</span></button> 
        <h4>There are <%= pluralize(@list.errors.count, 'error') %></h4>
        <ul>
          <% @list.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control",  auto_complete: "off", placeholder: "Please give ToDo list a title" %>
    </div>
    <div class="form-group">
      <%= f.label :description %>
      <%= f.text_area :description, rows: 8, class: "form-control",  auto_complete: "off", placeholder: "Please give your list a description" %>
    </div>
    <div class="form-group">
      <%= f.submit "Create new list", class: "btn btn-info btn-lg" %>
    </div>
  <% end %>
  </div>
</div>