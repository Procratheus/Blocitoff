
<div class="jumbotron">
  <div>
    <h2><%= markdown @list.title %></h2>
    <h4 class="lead"><%= markdown @list.description %></h4>
  </div>
  <div class="row">
    <div class="col-md-8">

    </div>
    <div class="col-md-1">
      <p><%= link_to '#', class: "btn btn-info btn-sm" do %> 
        <span>Add</span>
      <% end %> 
      </p>
    </div>
     <div class="col-md-1">
      <p><%= link_to edit_list_path, class: "btn btn-info btn-sm" do %> 
        <span>Edit</span>
      <% end %> 
      </p>
    </div>
    <div class="col-md-1">
      <p><%= link_to '#', class: "btn btn-warning btn-sm" do %> 
        <span>Clear</span>
      <% end %> 
      </p>
    </div>
    <div class="col-md-1">
      <p><%= link_to @list, method: :delete, data: { confirm: "Are you sure you want yo delete this list?" }, class: "btn btn-danger btn-sm" do %> 
        <span>Delete</span>
      <% end %> 
    </div>
  </div>
</div>

<% if @list.nil? %>
  <%= link_to "Create new list", new_list_path, class: "btn btn-success" %>
<% else %>
  <div class="panel panel-default">
    <div class="col-md-12">
      <div class="col-md-1 panel-heading">
        <p>Check</p>
      </div>
      <div class="col-md-7 panel-heading">
        <p>ToDo List Item</p>
      </div>
      <div class="col-md-2 panel-heading">
        <p>Time Left</p>
      </div>
      <div class="col-md-2 panel-heading">
        <p>Actions</p>
      </div>
    </div>    
  </div>
<% end %>




