  <div class="jumbotron">
    <h1>Welcome to Blocitoff</h1>
    <p class="lead">Blocitoff is a automated ToDo list that will help you manage your life.</p>
    <% if current_user && current_user.list != nil  %>
      <p class="sign-up-button"><%= link_to list_path(current_user.list), class: "btn btn-info btn-lg" do %>
        <span>Go to List</span>
      <% end %>
    <% elsif current_user %>
      <p class="sign-up-button"><%= link_to new_list_path, class: "btn btn-info btn-lg" do %>
        <span>Create New List</span>
      <% end %>
    <% else %>
      <p class="sign-up-button"><%= link_to new_user_registration_path, class: "btn btn-info btn-lg" do %>
        <span>Sign-up</span>
      <% end %>
    <% end %>
    </p> 
  </div>

